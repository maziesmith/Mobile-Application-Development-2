<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Headline"
        android:text="@string/finalproject_dialog_register_title"
        android:gravity="center"
        android:paddingBottom="@dimen/finalproject_dialog_title_bottom_padding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/finalproject_dialog_padding"
        android:paddingRight="@dimen/finalproject_dialog_padding"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.8">

            <EditText
                android:id="@+id/finalproject_dialog_register_username"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/finalproject_edit_text_margin"
                android:layout_marginRight="@dimen/finalproject_edit_text_margin"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@drawable/finalproject_drawable_edit_text"
                android:gravity="center"
                android:singleLine="true"
                android:hint="@string/finalproject_dialog_register_hint"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/finalproject_dialog_register_ok"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_done_white_24dp"
                android:clickable="true"
                app:rippleColor="@color/green"
                android:layout_gravity="center"
                app:backgroundTint="@color/green"
                app:borderWidth="0dp"/>

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/finalproject_dialog_register_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/finalproject_dialog_register_error_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/red"/>

</LinearLayout>