<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view_fragment_tutorial_dribbling"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:weightSum="10"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tutorial_dribbling_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/tutorialdribblingcount"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:text="@string/tutorialdribblingtext"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tutorial_dribble_phone_image_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/tutorial_dribble_phone_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.85"
            android:visibility="visible"
            android:src="@drawable/hand"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/tutorial_dribble_phone_accomplishment"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:visibility="gone"
        android:src="@drawable/dribblesuccessfully"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="20sp"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:text="@string/tutorialdribbling"/>

</LinearLayout>