<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view_fragment_tutorial_shoot_medium_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="10">

    <LinearLayout
        android:id="@+id/tutorial_shoot_time_left"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="invisible"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/shoot_in"/>

        <TextView
            android:id="@+id/tutorial_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tutorial_shoot_direction"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="40dp"
        android:layout_weight="7"
        android:visibility="visible"
        android:textAlignment="center"
        android:gravity="center_vertical"/>

    <ImageView
        android:id="@+id/tutorial_shoot_phone_success"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:visibility="gone"/>

    <Button
        android:id="@+id/tutorial_shoot_lets_try"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:visibility="gone"
        android:textSize="25sp"
        android:text="Let's Try Again !"/>

</LinearLayout>